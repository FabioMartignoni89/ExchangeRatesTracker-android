<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="it.fabiomartignoni.exchangeratestracker.ExchangeRatesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_exchange_rates">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="it.fabiomartignoni.exchangeratestracker.NewExchangeRateFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_new_exchange_rate">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>
